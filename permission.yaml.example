# 权限配置示例
# 将此文件复制为 permission.yaml 并根据需要修改

permission:
  # 是否启用权限检查（true=启用，false=禁用）
  enabled: true

  # 是否允许所有操作（仅用于开发/调试，生产环境应设为 false）
  allow_all: false

  # 资源权限配置
  resources:
    # 部门权限
    dept:
      create: true   # 允许创建部门
      read: true     # 允许读取部门信息
      update: true   # 允许更新部门
      delete: false  # 禁止删除部门

    # 用户权限
    user:
      create: true   # 允许创建用户
      read: true     # 允许读取用户信息
      update: true   # 允许更新用户
      delete: false  # 禁止删除用户

    # 群组权限
    group:
      create: true   # 允许创建群组
      read: true     # 允许读取群组信息
      update: true   # 允许更新群组
      delete: false  # 禁止删除群组

    # 会话权限
    session:
      create: true   # 允许创建会话
      read: true     # 允许读取会话信息
      update: true   # 允许更新会话
      delete: false  # 禁止删除会话

    # 消息权限
    message:
      create: true   # 允许发送消息
      read: true     # 允许读取消息
      update: false  # 禁止更新消息（消息一般不可修改）
      delete: false  # 禁止删除消息

# 配置说明：
# 1. enabled: false - 完全禁用权限检查，所有操作都允许
# 2. allow_all: true - 启用权限检查但允许所有操作（调试模式）
# 3. 针对每个资源单独配置 CRUD 权限
# 4. 如果某个资源未配置，默认拒绝所有操作
