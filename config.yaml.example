# 有度即时通讯配置
youdu:
  # 有度服务器地址
  addr: "http://your-youdu-server:7080"
  # 企业总机号
  buin: 123456789
  # 应用ID
  app_id: "your-app-id"
  # AES加密密钥
  aes_key: "your-aes-key"

# 数据库配置
db:
  # 数据库文件路径（SQLite）
  path: "./youdu.db"

# 权限配置
permission:
  # 是否启用权限检查（true=启用，false=禁用）
  enabled: true

  # 是否允许所有操作（仅用于开发/调试，生产环境应设为 false）
  allow_all: false

  # 资源权限配置
  resources:
    # 部门权限
    dept:
      create: false   # 禁止创建部门
      read: true     # 允许读取部门信息
      update: false   # 禁止更新部门
      delete: false  # 禁止删除部门
      # allowlist: ["1", "2"]  # 可选：允许访问的部门ID列表（行级权限）

    # 用户权限
    user:
      create: false   # 禁止创建用户
      read: true     # 允许读取用户信息
      update: false   # 禁止更新用户
      delete: false  # 禁止删除用户
      # allowlist: ["10232", "10023"]  # 可选：允许访问的用户ID列表（行级权限）

    # 群组权限
    group:
      create: true   # 允许创建群组
      read: true     # 允许读取群组信息
      update: true   # 允许更新群组
      delete: false  # 禁止删除群组
      # allowlist: ["group1", "group2"]  # 可选：允许访问的群组ID列表（行级权限）

    # 会话权限
    session:
      create: true   # 允许创建会话
      read: true     # 允许读取会话信息
      update: true   # 允许更新会话
      delete: false  # 禁止删除会话
      # allowlist: []  # 可选：允许访问的会话ID列表（行级权限）

    # 消息权限
    message:
      create: true   # 允许发送消息
      read: true     # 允许读取消息
      update: false  # 禁止更新消息（消息一般不可修改）
      delete: false  # 禁止删除消息
      # allowlist: []  # 可选：允许访问的消息ID列表（行级权限）
      # allowsend:     # 可选：消息发送权限控制（限制可以向哪些用户/部门发送消息）
      #   users: ["10232", "8891"]  # 允许发送消息的目标用户ID列表
      #   dept: ["1"]               # 允许发送消息的目标部门ID列表

# Token 认证配置
token:
  # 是否启用 token 认证（true=启用，false=禁用）
  enabled: false

